{
  "Confirmit": {
    "ApplicationName": "Confirmit.Cdl.Api",
    "Logging": {
      "Path": "#{Confirmit.Site.LogPath | JsonEscape}"
    },
    "Authentication": {
      "CustomGrant": {
        "ClientId": "Confirmit.Cdl.Api"
      },
      "Introspection": {
        "ClientId": "cdl"
      }
    },
    "ServiceProviderValidateScopes": false,
    "Cleanup": {
      "ExpirationPeriodInDays": 30,
      "CleanupIntervalInMinutes": 240
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
